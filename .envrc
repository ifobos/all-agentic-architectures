# Activar el entorno virtual automáticamente
source .venv/bin/activate

# Opcional: Cargar variables de entorno del archivo .env de forma segura
if [ -f .env ]; then
    set -a  # Activar auto-export
    source .env
    set +a  # Desactivar auto-export
fi

# Mensaje de confirmación
echo "🐍 Entorno virtual de Python activado automáticamente"
echo "📁 Directorio: $(pwd)"
echo "🔧 Python: $(which python)"